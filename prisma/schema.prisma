enum CourseStatus {
  active
  inactive
  draft
}

enum SectionStatus {
  active
  inactive
}

enum LessonStatus {
  active
  inactive
}

enum LessonType {
  video
  document
  quiz
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refreshTokens RefreshToken[]
  // student      Student?
  // teacher      Teacher?
  // admin        Admin?
  roles         UserRole[]
  enrollments   Enrollment[]
  categories    Category[]
  courses       Course[]
}

model Role {
  id   Int    @id @default(autoincrement())
  name String @unique

  users UserRole[]
}

model UserRole {
  userId Int
  roleId Int

  user User @relation(fields: [userId], references: [id])
  role Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

